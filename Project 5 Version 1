class human{

float lb, ht;
float r,g,b;
float Xperson, Yperson;
float w;
// Constructor
Person(float ht){
Xperson = ht + random(20,40);
Yperson = random(50,150);
w = random(20,60);
r = random(255);
g = random(255);
b = random(255);
}

void showPerson(){
  
fill(r,g,b);
rect(Xperson,400,w,-big);


}


void keyPressed(){
 
 if(key=='t') tall();
  
  
}
