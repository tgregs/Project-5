void tall(){
 // Move tallest to the end
 // Find index of tallest, change Xperson to Xperson of last.
 int k=0;
 for(int i=1; i<many; i++){
   if(human[i].big > human[k].big) k=i;
 }
swap (human,k,last);

last = k;

